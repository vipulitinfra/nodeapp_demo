pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vipulitinfra/nodeapp_demo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t nodeapp_demo:latest .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker-compose up -d'
            }
        }

        stage('Test Application') {
            steps {
                sh 'sleep 5 && curl -f http://localhost:3000 || exit 1'
            }
        }
    }

    post {
        always {
            sh 'docker-compose down'
        }
        success {
            echo '✅ NodeApp built and deployed successfully on AWS Ubuntu!'
        }
        failure {
            echo '❌ Pipeline failed! Check Jenkins logs.'
        }
    }
}
